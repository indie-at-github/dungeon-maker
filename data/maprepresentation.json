    }
  },
  "shaders": {
    "tiles": {
      "id": "tile_rendering",
      "vertex_shader": [
        "#version 330",
        "uniform mat4 modelViewProj;",
        "in vec3 position;",
        "in vec3 color;",
        "in vec2 texCoords;",
        "out vec3 color_v2f;",
        "out vec2 texCoords_v2f;",
        "void main() {",
        "    color_v2f = color;",
        "    texCoords_v2f = texCoords;",
        "    gl_Position = modelViewProj * vec4(position, 1.0);",
        "}"
      ],
      "fragment_shader": [
        "#version 330",
        "in vec3 color_v2f;",
        "in vec2 texCoords_v2f;",
        "uniform sampler2D tiles;",
        "out vec4 color;",
        "void main() {",
        "   vec4 tex = texture(tiles, texCoords_v2f);",
        "   tex.a += (1.0f - color_v2f.r);",
        "   color = vec4(color_v2f, 1.0) * tex;",
        "}"
      ]
    },
    "grid": {
      "id": "grid_rendering",
      "vertex_shader": [
        "#version 330",
        "uniform mat4 modelViewProj;",
        "in vec3 position;",
        "in vec3 color;",
        "out vec3 color_v2f;",
        "void main() {",
        "    color_v2f = color;",
        "    gl_Position = modelViewProj * vec4(position, 1.0);",
        "}"
      ],
      "fragment_shader": [
        "#version 330",
        "in vec3 color_v2f;",
        "out vec4 color;",
        "void main() {",
        "    color = vec4(color_v2f, 1.0);",
        "}"
      ]
    }
  }
