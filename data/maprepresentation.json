{
  "version": "0.1.0",
  "tileset": "data/tileset_cave_1.png",
  "mapconfig": "",
  "tilesize": {
    "width": 40,
    "height": 40
  },
  "shader": {
    "id": "tile_rendering",
    "vertex_shader": [
      "#version 330",
      "uniform mat4 modelViewProj;",
      "in vec3 position;",
      "in vec3 color;",
      "out vec3 color_v2f;",
      "void main() {",
      "    color_v2f = color;",
      "    gl_Position = modelViewProj * vec4(position, 1.0);",
      "}"
    ],
    "fragment_shader": [
      "#version 330",
      "in vec3 color_v2f;",
      "out vec4 color;",
      "void main() {",
      "    color = vec4(color_v2f, 1.0);",
      "}"
    ]
  }
}
